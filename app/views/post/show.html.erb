<h1>게시글 보기</h1>
<p>제목 : <%= @post.title %></p>
<p>내용 : <%= @post.content %></p>

<a href="/post/edit/<%= @post. id %>">수정</a>
<a href="/post/destroy/<%= @post. id %>">삭제</a>
<form action="/post/create_comment/<%= @post.id %>">
    <input type="text" name="content">
    <input type="submit" value="댓글쓰기">
</form>

<% @post.comments.each do |c| %>
    <p><%= c.content%></p>
<% end %>

